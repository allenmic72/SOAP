<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:gravity="center"
   android:padding="35dip">
   <TextView
      android:text="@string/boggle_main_title"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_gravity="center"
      android:layout_marginBottom="20dip"
      android:textSize="25sp" />
   <TableLayout
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_gravity="center"
      android:stretchColumns="*">
      <TableRow>
         <Button
            android:id="@+id/boggle_new_game_button"
            android:text="@string/boggle_new_game_button_title" />
         <Button
            android:id="@+id/boggle_acknowledgements_button"
            android:text="@string/boggle_acknowledgements_button_title" />
      </TableRow>
      <TableRow>
         <Button
            android:id="@+id/boggle_settings_button"
            android:text="@string/boggle_settings_button_label" />
         <Button
            android:id="@+id/boggle_exit_button"
            android:text="@string/exit_label" />
      </TableRow>
   </TableLayout>
</LinearLayout>